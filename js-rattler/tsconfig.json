{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "es2022",
        "target": "es2022",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "declaration": true,
        "declarationMap": true,
        "declarationDir": "types",
        "strict": true,
        "sourceMap": true,
        "stripInternal": true
    },
    "include": [
        "src",
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts",
    ]
}
