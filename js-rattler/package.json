{
    "name": "@baszalmstra/rattler",
    "version": "0.1.2",
    "description": "Javascript bindings to the rattler library",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/conda/rattler.git"
    },
    "author": "Bas Zalmstra",
    "license": "BSD-3-Clause",
    "bugs": {
        "url": "https://github.com/conda/rattler/issues"
    },
    "homepage": "https://github.com/conda/rattler#readme",
    "main": "./dist/umd.js",
    "types": "./dist/index.d.ts",
    "files": [
        "dist/**/*"
    ],
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/esm.mjs",
            "default": "./dist/umd.js"
        }
    },
    "scripts": {
        "build:wasm": "wasm-pack build --target bundler --mode normal --release",
        "build": "rimraf dist pkg && npm run build:wasm && webpack --mode=production && api-extractor run --verbose",
        "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
        "fmt": "prettier --write .",
        "fmt:check": "prettier --check ."
    },
    "devDependencies": {
        "@jest/globals": "^29.7.0",
        "@microsoft/api-extractor": "^7.50.0",
        "cross-env": "^7.0.3",
        "jest": "^29.7.0",
        "prettier": "^3.3.3",
        "prettier-plugin-jsdoc": "^1.3.0",
        "rimraf": "^6.0.1",
        "ts-jest": "^29.2.5",
        "ts-loader": "^9.5.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.6.3",
        "wasm-pack": "^0.13.1",
        "webpack": "^5.96.1",
        "webpack-cli": "^5.1.4",
        "webpack-merge": "^6.0.1"
    }
}
