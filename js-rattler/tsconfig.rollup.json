{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "ES2022",
        "target": "ES2022",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "declaration": false,
        "declarationMap": false,
        "strict": true,
        "sourceMap": true,
        "stripInternal": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/*.test.ts"]
}
